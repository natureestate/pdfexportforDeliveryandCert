{
  "name": "work-delivery-note-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "dev:host": "vite --port 3000 --host",
    "restart": "npm run kill-port && npm run dev",
    "restart:host": "npm run kill-port && npm run dev:host",
    "kill-port": "lsof -ti:3000 | xargs kill -9 2>/dev/null || echo 'ไม่มี process ที่ใช้ port 3000'",
    "kill-port:force": "lsof -ti:3000 | xargs -r kill -9 2>/dev/null || echo 'ไม่มี process ที่ใช้ port 3000'",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview --port 4173",
    "preview:host": "vite preview --port 4173 --host",
    "clean": "rm -rf dist node_modules/.vite",
    "setup": "npm install && npm run clean",
    "migrate:quotas": "tsx scripts/create-default-quotas.ts",
    "deploy": "firebase deploy --only hosting",
    "build:deploy": "npm run build && npm run deploy",
    "push": "git push origin main",
    "commit": "git add -A && git commit",
    "ship": "git add -A && git commit && git push origin main && npm run build && npm run deploy"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@types/qrcode": "^1.5.6",
    "@types/react-signature-canvas": "^1.0.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "^12.3.0",
    "html2canvas": "^1.4.1",
    "i18next": "^25.7.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.554.0",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.3.5",
    "react-router-dom": "^7.9.5",
    "react-signature-canvas": "^1.1.0-alpha.2",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "@types/node": "^22.18.9",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.24",
    "firebase-admin": "^13.5.0",
    "postcss": "^8.5.6",
    "shadcn": "^3.4.0",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
